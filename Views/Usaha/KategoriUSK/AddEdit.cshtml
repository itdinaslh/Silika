@model KategoriUSK

<div class="modal-header">
    @if (Model.KategoriUSKId == 0) {
        <h4 class="modal-title">Tambah Kategori USK</h4>
    } else {
        <h4 class="modal-title">Edit Kategori USK</h4>
    }

    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
</div>
<div class="modal-body mx-50 pb-3">
    <form action="/usaha/limbahb3/store" class="row gy-1 gx-2 mt-75" method="post">
        <input type="hidden" asp-for="KategoriUSKId" />
        <input type="hidden" asp-for="KodeKategori" />        
        <div class="col-12">
            <label class="form-label">Nama Kategori USK</label>              
            <input type="text" asp-for="NamaKategori" class="form-control" autocomplete="off" />
            <span asp-validation-for="NamaKategori" class="text-danger"></span>
        </div>
        <div class="col-12 text-end mt-2">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-success">Simpan</button>
        </div>
    </form>
</div>