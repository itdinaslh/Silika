@model NilaiPencemaran

<form action="/kualitas-lingkungan/nilai-pencemaran/save" method="post">
    <input type="hidden" asp-for="NilaiID" />
    <div class="modal-header">
        @if (Model.NilaiID == 0)
        {
            <h4 class="modal-title">Tambah Nilai Pencemaran</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Nilai Pencemaran</h4>
        }

        <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Nilai Pencemaran</label>
            <input type="text" asp-for="NamaNilai" class="form-control" autocomplete="off" autofocus />
            <span asp-validation-for="NamaNilai" class="text-danger"></span>
        </div> 
        <div class="form-group mt-4">
            <label>Nilai Awal</label>
            <input asp-for="Awal" class="form-control" autocomplete="off" />
            <span asp-validation-for="Awal" class="text-danger"></span>
        </div> 
        <div class="form-group mt-4">
            <label>Nilai Akhir</label>
            <input asp-for="Akhir" class="form-control" autocomplete="off" />
            <span asp-validation-for="Akhir" class="text-danger"></span>
        </div> 
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>