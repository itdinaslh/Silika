@model Bidang

<div class="modal-header">
    @if (Model.BidangID == Guid.Empty) {
        <h4 class="modal-title">Tambah Bidang</h4>
    } else {
        <h4 class="modal-title">Edit Bidang</h4>
    }

    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
</div>

<div class="modal-body mx-50 pb-3">
    <form action="/master/bidang/save" class="row gy-1 gx-2 mt-75" method="post">
        <input type="hidden" asp-for="BidangID" />          
        <div class="col-12">
            <label class="form-label">Nama Bidang</label>              
            <input type="text" asp-for="NamaBidang" class="form-control" autocomplete="off" autofocus />
            <span asp-validation-for="NamaBidang" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Nama Pimpinan</label>
            <input type="text" asp-for="KepalaBidang" class="form-control" autocomplete="off" />
        </div>
        <div class="col-12 text-end mt-2">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-success">Simpan</button>
        </div>
    </form>
</div>

