@model JenisWr

<div class="modal-header">
    @if (Model.JenisID == 0)
    {
        <h4 class="modal-title">Tambah Jenis WR</h4>
    }
    else
    {
        <h4 class="modal-title">Edit Jenis WR</h4>
    }

    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
</div>



    
<div class="modal-body mx-50 pb-3">
    <form action="/wr/jenis/save" method="post" class="row gy-1 gx-2 mt-75">
        <input type="hidden" asp-for="JenisID" />
        <div class="col-12">
        <label>Nama Jenis WR</label>
        <input type="text" asp-for="NamaJenis" class="form-control" autocomplete="off" autofocus />
        <span asp-validation-for="NamaJenis" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label>No Rekening</label>
        <input type="text" asp-for="NoRekening" class="form-control" autocomplete="off" />
        <span asp-validation-for="NoRekening" class="text-danger"></span>      
    </div>
    <div class="col-12 text-end mt-2">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
    </form>    
</div>    
