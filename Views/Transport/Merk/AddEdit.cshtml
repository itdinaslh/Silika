@model MerkKendaraan

<div class="modal-header">
    @if (Model.MerkID == 0)
    {
        <h4 class="modal-title">Tambah Merk Kendaraan</h4>
    }
    else
    {
        <h4 class="modal-title">Edit Merk Kendaraan</h4>
    }

    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
</div>
<div class="modal-body mx-50 pb-3">
    <form action="/transport/merk-kendaraan/save" class="row gy-1 gx-2 mt-75" method="post">
        <input type="hidden" asp-for="MerkID" />
        <div class="col-12">
            <label class="form-label">Kode Merk</label>
            <input type="text" asp-for="KodeMerk" class="form-control" autocomplete="off" autofocus />
        </div>
        <div class="col-12">
            <label class="form-label">Nama Merk Kendaraan</label>
            <input type="text" asp-for="NamaMerk" class="form-control" autocomplete="off" />
            <span asp-validation-for="NamaMerk" class="text-danger"></span>
        </div>
        <div class="col-12 text-end mt-2">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-success">Simpan</button>
        </div>
    </form>    
</div>    
