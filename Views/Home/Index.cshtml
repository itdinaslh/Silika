@{
    ViewData["title"] = "Dashboard";
}

<div class="content-header row">
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-start mb-0">Kelola Sampah</h2>
                <div class="breadcrumb-wrapper">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Kelola Sampah</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content-header-right text-md-end col-md-3 col-12 d-md-block d-none">
        <div class="mb-1 breadcrumb-right">
            <div class="dropdown">
                <button class="btn-icon btn btn-primary btn-round btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i data-feather="grid"></i></button>
                <div class="dropdown-menu dropdown-menu-end">
                    <a class="dropdown-item" href="/dashboard"><i class="me-1" data-feather="check-square"></i><span class="align-middle">Kelola Sampah</span></a>
                    <a class="dropdown-item" href="/dashboard/bantargebang"><i class="me-1" data-feather="trash"></i><span class="align-middle">Bantargebang</span></a>
                    <a class="dropdown-item" href="/dashboard/bpsrw"><i class="me-1" data-feather="mail"></i><span class="align-middle">BPS RW</span></a>
                    <a class="dropdown-item" href="/dashboard/tps"><i class="me-1" data-feather="calendar"></i><span class="align-middle">TPS &amp; TPS 3R</span></a>
                    <a class="dropdown-item" href="/dashboard/bpsrw"><i class="me-1" data-feather="dollar-sign"></i><span class="align-middle">Bank Sampah</span></a>
                    <a class="dropdown-item" href="/dashboard/rdf"><i class="me-1" data-feather="feather"></i><span class="align-middle">RDF</span></a>
                    <a class="dropdown-item" href="/dashboard/fpsa"><i class="me-1" data-feather="database"></i><span class="align-middle">FPSA</span></a>
                </div>
            </div>
        </div>
    </div>    
</div>

<div class="content-body">
    <section id="statistics-card">
        <!-- Kelola Sampah -->
        <div class="row match-height">            
            <div class="col-lg-4 col-sm-12 col-12">
                <div class="card text-center bg-dark">
                    <div class="card-body">
                        <div class="p-10">
                            <h5 class="text-light">Timbulan Sampah</h5>
                            <span class="text-light" style="font-size: 24px; font-weight:bold">256.953,15</span> <br />
                            <span class="text-light">Ton/Bulan</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 col-12">
                <div class="card bg-primary text-light">
                    <div class="card-header">
                        <div>
                            <h2 class="fw-bolder mb-0 text-light">62.911,89 Ton/Bulan</h2>
                            <p class="card-text">Pengurangan Sampah</p>                            
                        </div>
                        <div class="p-50 m-0">
                            <div class="avatar-content">
                                <span class="font-medium-5 text-light">24,48%</span>                                
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="progress progress-bar-success mt-4">
                                <div class="progress-bar" role="progressbar" aria-valuenow="24.48" aria-valuemin="0" aria-valuemax="100" style="width: 24.48%;">24,48%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 col-12">
